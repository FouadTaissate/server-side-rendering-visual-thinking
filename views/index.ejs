<%- include('./partials/head') %>


<div class="layout">
  <% methods.forEach(method => { %>
  <section id="section-main">
    <p class="method-title"><%= method.title %></p>
    <a
      href="/method/<%= method.slug %>?id=<%= method.id %>"
      class="link-insight-page"
    >
      <img
        src="<%= method.template?.url %>"
        onerror="this.src='assets/logo.png';"
        class="image-template"
        alt="foto van <%= method.title %>"
      />
      <% method.categories.forEach(category => { %>
      <span class="categories-hidden"> <%= category.title %> </span>
      <% }) %>
    </a>
  </section>
  <% }) %>
</div>

<%- include('./partials/footer') %>
